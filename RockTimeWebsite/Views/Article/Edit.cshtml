@model Article
<article class="panel panel-default">
    <h2 class="panel-heading em10">
        <span>@ViewBag.EditorTitle</span>
    </h2>
    @using (Html.BeginForm("Edit", "Article"))
    {   <div class="panel-body em8">
            <div class="form-group form-group-sm">
                <label for="usr">Article Title:</label>
                <input type="text" name="ArticleTitle" value="@Model.ArticleTitle" class="form-control em8" placeholder="Article Title">
            </div>
            <div class="form-group form-group-sm">
                <label for="usr">Article Header:</label>
                <input type="text" name="ArticleHeader" value="@Model.ArticleHeader" class="form-control em8" placeholder="Article Header">
            </div>
            <div class="form-group form-group-sm">
                <label for="usr">Article Content:</label>
                <textarea name="ArticleContent" class="form-control em8">@Model.ArticleContent</textarea>
            </div>
            <input type="hidden" value="@Model.ArticleId" name="ArticleId">
            <input type="hidden" value="@Model.ParentArticleId" name="ParentArticleId">
            <input type="hidden" value="@Model.ArticleLevel" name="ArticleLevel">
        </div>
        <footer class="panel-footer">
            <div class="text-right">
                <button class="btn btn-danger btn-sm" type="submit">Save</button>
            </div>
        </footer>
    }
</article>

